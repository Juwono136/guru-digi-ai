{
  "version": 2,
  "projects": [
    {
      "src": "client/package.json",
      "use": "@vercel/node",
      "builds": [
        {
          "src": "client/vite.config.js",
          "use": "@vercel/static-build"
        }
      ],
      "routes": [
        {
          "src": "/(.*)",
          "dest": "client/dist/$1"
        }
      ]
    },
    {
      "src": "server/index.js",
      "use": "@vercel/node",
      "routes": [
        {
          "src": "/api/(.*)",
          "dest": "server/index.js"
        }
      ]
    }
  ]
}
